<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView_activity_recetas_vista"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ededed">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:focusableInTouchMode="true" >

        <!-- Imagen -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/receta_image"
                android:layout_width="match_parent"
                android:layout_height="266dp"
                android:adjustViewBounds="true"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:src="@drawable/load_placeholder" />
        </RelativeLayout>

        <!-- Nombre Receta -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/greenCheckbox"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/receta_nombre"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingBottom="6dp"
                android:paddingTop="8dp"
                android:text="Acelga con Sal"
                android:textAppearance="@style/textSize_h1"
                android:textColor="@color/tabs_background"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Categoria -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/greenCheckbox"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="8dp" >

            <TextView
                android:id="@+id/receta_categoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/recetas_vista_categoria_white"
                android:drawablePadding="4dp"
                android:text="Mejillones"
                android:textAppearance="@style/textSize_h2"
                android:textColor="@color/tabs_background" />
        </LinearLayout>

        <!-- Info General -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/greenCheckboxLigth"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp" >

            <LinearLayout
                android:id="@+id/layoutInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:baselineAligned="false" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="3dp"
                        android:drawableTop="@drawable/resultados_tiempo_white"
                        android:text="Tiempo"
                        android:textAppearance="@style/textSize_h4"
                        android:textColor="@color/tabs_background" />

                    <TextView
                        android:id="@+id/receta_tiempo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20m"
                        android:textColor="@color/tabs_background"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="3dp"
                        android:drawableTop="@drawable/resultados_dificultad_white"
                        android:text="Dificultad"
                        android:textAppearance="@style/textSize_h4"
                        android:textColor="@color/tabs_background" />

                    <TextView
                        android:id="@+id/receta_dificultad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Media"
                        android:textColor="@color/tabs_background"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="3dp"
                        android:drawableTop="@drawable/resultados_porciones_white"
                        android:text="Porciones"
                        android:textAppearance="@style/textSize_h4"
                        android:textColor="@color/tabs_background" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textColor="@color/tabs_background"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="3dp"
                        android:drawableTop="@drawable/resultados_salud_white"
                        android:text="Salud"
                        android:textAppearance="@style/textSize_h4"
                        android:textColor="@color/tabs_background" />

                    <TextView
                        android:id="@+id/receta_salud"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="78% Sano"
                        android:textColor="@color/tabs_background"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/border"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" >

            <TextView
                android:id="@+id/porciones_titulo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.55"
                android:gravity="right"
                android:paddingRight="5dp"
                android:text="@string/recetas_vista_porciones_label"
                android:textSize="18sp"
                android:textColor="#555" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.45"
                android:gravity="left"
                android:orientation="horizontal"
                android:paddingLeft="5dp" >

                <Button
                    android:id="@+id/recetas_vista_button_porciones_minus"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/border_radius"
                    android:text="-"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="bold"  />

                <TextView
                    android:id="@+id/receta_porciones"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:text="2"
                    android:textColor="@color/greenCheckbox"
                    android:textSize="23sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/recetas_vista_button_porciones_plus"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/border_radius"
                    android:text="+"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <!-- Container preparacion y lista -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- Lista de ingredientes -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/ingredientes_titulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:text="@string/recetas_vista_ingredinetes_label"
                    android:textAppearance="@style/textSize_h2"
                    android:textColor="@color/greenCheckbox" />

                <ListView
                    android:id="@+id/listViewDetalles"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >
                </ListView>
            </LinearLayout>

            <!-- Preparacion -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/preparacion_titulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="@string/recetas_vista_preparacion_label"
                    android:textAppearance="@style/textSize_h2"
                    android:textColor="@color/greenCheckbox" />

                <TextView
                    android:id="@+id/receta_preparacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="asdhiuashd asjdijasod ajsdiojasod asjdiajsido asdjiasj\n asjdioasjdo \n jhaiodjoasdjioasjdi"
                    android:textColor="#555"
                    android:textSize="17sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>